@model Project
@{
    ViewData["Title"] = "Create";
}





<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ProjectName">Proje Adı</label>
        <input type="text" class="form-control" id="ProjectName" name="ProjectName" required />
    </div>
    <div class="form-group">
        <label for="ProjectDescription">Proje Açıklaması</label>
        <textarea class="form-control" id="ProjectDescription" name="ProjectDescription" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Proje Ekle</button>
</form>